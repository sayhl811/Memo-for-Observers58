        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è "—Å–∫–∞—á–∏–≤–∞–Ω–∏—è" —Ñ–æ—Ä–º
        function downloadForm(type) {
            alert('–í —Ä–µ–∞–ª—å–Ω–æ–º –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–∏ –∑–¥–µ—Å—å –ø—Ä–æ–∏—Å—Ö–æ–¥–∏–ª–∞ –±—ã –∑–∞–≥—Ä—É–∑–∫–∞ —Ñ–∞–π–ª–∞. –î–ª—è –¥–∞–Ω–Ω–æ–π –¥–µ–º–æ–Ω—Å—Ç—Ä–∞—Ü–∏–∏ —Ä–µ–∫–æ–º–µ–Ω–¥—É–µ–º —Ä–∞—Å–ø–µ—á–∞—Ç–∞—Ç—å —Å—Ç—Ä–∞–Ω–∏—Ü—É (–∫–Ω–æ–ø–∫–∞ –ø—Ä–∏–Ω—Ç–µ—Ä–∞ –≤–Ω–∏–∑—É —Å–ø—Ä–∞–≤–∞).');
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ
        document.addEventListener('DOMContentLoaded', function() {
            // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º –ø–µ—Ä–≤—ã–π —Ä–∞–∑–¥–µ–ª –∞–∫—Ç–∏–≤–Ω—ã–º
            showSection('guide');
            
            // –î–æ–±–∞–≤–ª—è–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –±—ã—Å—Ç—Ä—ã—Ö –∫–Ω–æ–ø–æ–∫
            document.querySelectorAll('.quick-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    if (this.getAttribute('href') && this.getAttribute('href').startsWith('#')) {
                        e.preventDefault();
                        const sectionId = this.getAttribute('href').substring(1);
                        showSection(sectionId);
                    }
                });
            });
        });
    </script>
</body>
