    <button class="print-btn" onclick="window.print()" title="–†–∞—Å–ø–µ—á–∞—Ç–∞—Ç—å –ø–∞–º—è—Ç–∫—É">
        <i class="fas fa-print"></i>
    </button>

    <script>
        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è —Ä–∞–∑–¥–µ–ª–æ–≤
        function showSection(sectionId) {
            // –°–∫—Ä—ã—Ç—å –≤—Å–µ —Ä–∞–∑–¥–µ–ª—ã
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // –ü–æ–∫–∞–∑–∞—Ç—å –≤—ã–±—Ä–∞–Ω–Ω—ã–π —Ä–∞–∑–¥–µ–ª
            document.getElementById(sectionId).classList.add('active');
            
            // –û–±–Ω–æ–≤–∏—Ç—å –∞–∫—Ç–∏–≤–Ω—É—é —Å—Å—ã–ª–∫—É –≤ –Ω–∞–≤–∏–≥–∞—Ü–∏–∏
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
                if (link.getAttribute('href') === '#' + sectionId) {
                    link.classList.add('active');
                }
            });
            
            // –ü—Ä–æ–∫—Ä—É—Ç–∏—Ç—å –∫ –Ω–∞—á–∞–ª—É —Ä–∞–∑–¥–µ–ª–∞
            document.getElementById(sectionId).scrollIntoView({behavior: 'smooth'});
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–∏—Å–∫–∞ –Ω–∞—Ä—É—à–µ–Ω–∏–π
        function searchViolations() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const violations = document.querySelectorAll('.violation-item');
            
            violations.forEach(violation => {
                const text = violation.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    violation.style.display = 'block';
                    // –ü–æ–¥—Å–≤–µ—Ç–∏—Ç—å –Ω–∞–π–¥–µ–Ω–Ω–æ–µ
                    violation.style.backgroundColor = '#fffde7';
                    violation.style.border = '2px solid #ffeb3b';
                } else {
                    violation.style.display = 'none';
                }
            });
        }

        // –§—É–Ω–∫—Ü–∏—è –¥–ª—è –ø–æ–∫–∞–∑–∞ –æ–±—Ä–∞–∑—Ü–æ–≤ –¥–æ–∫—É–º–µ–Ω—Ç–æ–≤
        function showSample(type) {
            const samples = {
